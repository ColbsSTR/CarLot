<% include ./partials/header.ejs %>
<div class="container">
<h1 style="text-align: center; padding: 30px;">Add a new car!</h1>
            <form action="/cars" method="POST" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-3 col-sm-3">
                        <div class="form-group">
                            <input class="form-control capitalize" type = "text" placeHolder="Make" name = "make">
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3">
                        <div class="form-group">
                            <input class="form-control capitalize" type="text" placeholder="Model" name="model" >
                        </div> 
                    </div>
                    <div class="col-md-3 col-sm-3">
                        <div class="form-group">
                            <input class="form-control" type = "number" placeHolder="Mileage" name = "mileage">
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-3">
                        <div class="form-group">
                            <input class="form-control" type="text" placeholder="MPG" name="mpg" >
                        </div> 
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-lg-3 col-sm-3">
                        <div class="form-group">
                            <input class="form-control" type="number" placeholder="Year" name="year" min="1960" step="1">
                        </div>
                    </div>
                    <div class="col-lg-3 col-sm-3">
                         <div class="form-group">
                            <input class="form-control" type="number" placeholder="Price" name="price">
                        </div>
                    </div>
                    <div class="col-md-3">
                            <select name="drive_type" id="inputDrive" class="form-control">
                              <option selected value="4WD">4WD</option>
                              <option value="2WD">2WD</option>
                              <option value="AWD">AWD</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select name="engine_type" id="inputEngine" class="form-control">
                              <option selected value="4cyl">4 Cylnder</option>
                              <option value="6cyl">6 Cylnder</option>
                              <option value="8cyl">8 Cylnder</option>
                            </select>
                        </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-sm-6">
                        <div class="form-group">
                            <label for="description">Description</label>
                                <textarea class="form-control custom-control" id="description"
                                          rows="10" cols="50" maxlength="500" name="description"
                                          wrap="hard" spellcheck="true" autocomplete="on">
                                </textarea>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6">
                        <label for="image" style="display: block">Images</label>
                        <input type="file" id="image" name="image" accept="image/*" multiple="" required>
                    </div>
                </div>
                <div class="form-group" id="center">
                    <button style="width: 50%;" class="btn btn-lg btn-default btn-primary">Submit!</button>
                </div>
            </form>
            <!--<div id="center">-->
            <!--    <button style="width: 25%;" class="btn btn-outline-primary">-->
            <!--        Go Back-->
            <!--    </button>-->
            <!--</div>-->
        </div>
</div>

