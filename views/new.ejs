<% include ./partials/header.ejs %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Add a new car!</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/cars" method="POST">
                <div class="form-group">
                    <input class="form-control" type = "text" placeHolder="Make" name = "make">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Model" name="model" >
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Year" name="year" min="1960" step="1">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="number" placeholder="Price" name="price">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Brief description" name="briefdescription">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            <select name="drive_type" id="inputDrive" class="form-control">
                              <option selected value="4WD">4WD</option>
                              <option value="2WD">2WD</option>
                              <option value="AWD">AWD</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select name="engine_type" id="inputEngine" class="form-control">
                              <option selected value="4cyl">4 Cylnder</option>
                              <option value="6cyl">6 Cylnder</option>
                              <option value="8cyl">8 Cylnder</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/cars">Go Back</a>
        </div>
    </div>
</div>

<% include ./partials/footer.ejs %>
