<% include ./partials/header %>


<div class="container">
  
  <!--<div class="jumbotron">-->
  <h1 class="display-4"><%= car.make %> <%= car.model %></h1>
  <hr id="boldHR" class="my-4">
<!--</div>-->

  <!--PICTURES-->
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="padding-bottom: 30px;">
  <div class="carousel-inner">
    <% car.image.forEach(function(image){ %>
      <% if (image == car.image[0]) { %>
      <div class="carousel-item active">
          <img class="d-block w-100" src="<%= image %>">
      </div>
      <% } else { %>
         <div class="carousel-item">
            <img class="d-block w-100" src="<%= image %>">
         </div>
      <% } %>
    <% }); %>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
    
    <div style="padding: 30px"class="card" id="center">
      <!--INFORMATION-->
      <div class="row">
        <div class="col-md-4">
          <!--<i class="fas fa-cogs fa-5x"></i>-->
          <!--<img style="width: 50%; height: 50%;" src="https://www.autotrader.com/resources/img/svgicons/DriveType.svg">-->
          <h3><%= car.mileage %> Miles</h3>
        </div>
        <div class="col-md-4">
          <!--<i class="fas fa-cogs fa-5x"></i>-->
          <!--<img style="width: 50%; height: 50%;" src="https://www.autotrader.com/resources/img/svgicons/DriveType.svg">-->
          <h3><%= car.drive %></h3>
        </div>
        <div class="col-md-4">
          <!--<i class="fas fa-cogs fa-5x"></i>-->
          <!--<img style="width: 50%; height: 50%;" src="https://www.autotrader.com/resources/img/svgicons/DriveType.svg">-->
          <h3><%= car.mpg %></h3>
        </div>
      </div>
      <div class="row">
         <div class="col-md-4">
          <!--<i class="fas fa-cogs fa-5x"></i>-->
          <!--<img style="width: 50%; height: 50%;" src="https://www.autotrader.com/resources/img/svgicons/DriveType.svg">-->
          <h3><%= car.engine %></h3>
        </div>
        <div class="col-md-4">
          <!--<i class="fas fa-cogs fa-5x"></i>-->
          <!--<img style="width: 50%; height: 50%;" src="https://www.autotrader.com/resources/img/svgicons/DriveType.svg">-->
          <h3><%= car.year %></h3>
        </div>
        <div class="col-md-4">
          <!--<i class="fas fa-cogs fa-5x"></i>-->
          <!--<img style="width: 50%; height: 50%;" src="https://www.autotrader.com/resources/img/svgicons/DriveType.svg">-->
          <h3>$<%= car.price %>.00</h3>
        </div>
      </div>
      
      <hr>
      <!--DESCRIPTION-->
      <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text"><%= car.description %></p>
      </div>
    </div>
</div>


<% include ./partials/footer %>