<% include ./partials/header.ejs %>

<div class="jumbotron">
    <div id="inventory-header">
      <h1 class="display-4">Inventory</h1>
      <div id="same-line">
        <p class="lead">All current cars are listed here. Feel free to refine your search below.</p>
        <!--Will need to be hidden if not logged in-->
        <a class="btn btn-primary" href="/cars/new" role="button">Add new Car</a>
      </div>
      <hr class="my-4">
      <p class="lead">
        <!----><!----><!---->
        <!--Refine search here-->
        <!----><!----><!---->
          <div class="form-group row">
            <form action="/cars/refined" method="POST">
              <div class="form-group col-sm-4">
                <label for="inputMake">Select Make</label>
                  <select name="make" id="inputMake" class="form-control">
                    <option value="Any Make">Any Make</option>
                      <% AllCars.forEach(function(car) { %>
                    <option value="<%=car.make%>">
                      <%= car.make %>
                    </option>
                    <% }); %>
                  </select>
                </div>
                <div class="form-group col-sm-4">
                  <label for="inputModel">Select Model</label>
                    <select name="model" id="inputModel" class="form-control">
                      <option value="Any Model">Any Model</option>
                      <% AllCars.forEach(function(car) { %>
                        <option value="<%=car.model%>">
                      <%= car.model %>
                    </option>
                  <% }); %>
                  </select>
                </div>
                 <div class="form-group col-sm-4">
                  <label for="inputYear">Select Year</label>
                    <select name="year" id="inputYear" class="form-control">
                      <option value="Any Year">Any Year</option>
                      <% AllCars.forEach(function(car) { %>
                        <option value="<%=car.year%>">
                      <%= car.year %>
                    </option>
                  <% }); %>
                  </select>
                </div>
              </div>
              <div class="form-group row">
                <button type="submit" class="btn btn-primary">Search</button>
              </form>
          </div>
      </p>
    </div>
</div>

<% cars.forEach(function(car) { %>
<div id="inventory-header">
    <div class="list-group">
      <a href="#" class="list-group-item list-group-item-action flex-column align-items-start ">
        <div class="d-flex w-100 justify-content-between">
          <h3 class="mb-1"><%= car.make %> <%= car.model %></h3>
          <h5>$<%=  car.price %></h5>
          <h5><%= car.briefdescription %></h5>
        </div>
      </a>
    </div>
</div>
<% }); %>

<% include ./partials/footer.ejs %>
